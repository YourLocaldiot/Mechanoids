<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>APM_Apparel_MechamancerPack</defName>
    <label>mechamancer pack</label>
    <description>PLACEHOLDER</description>
    <techLevel>Spacer</techLevel>
    <mergeVerbGizmos>false</mergeVerbGizmos>
    <graphicData>
      <texPath>Apparel/APM_MechamancerPack/MechamancerPack_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.6,0.6)</drawSize>
    </graphicData>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedPack</unfinishedThingDef>
      <!-- <recipeUsers> -->
        <!-- <li>BioferriteShaper</li> -->
      <!-- </recipeUsers> -->
      <useIngredientsForColor>false</useIngredientsForColor>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>30</displayPriority>
    </recipeMaker>
    <costList>
      <ComponentIndustrial>1</ComponentIndustrial>
      <!-- <Bioferrite>30</Bioferrite> -->
    </costList>
    <tickerType>Normal</tickerType>
    <statBases>
      <WorkToMake>7200</WorkToMake>
      <Mass>3</Mass>
      <Flammability>0.4</Flammability>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <wornGraphicPath>Apparel/APM_MechamancerPack/MechamancerPack</wornGraphicPath>
      <wornGraphicData>
        <renderUtilityAsPack>true</renderUtilityAsPack>
        <north>
          <scale>(0.85,0.85)</scale>
          <offset>(0,0.05)</offset>
        </north>
        <south>
          <scale>(0.65,0.65)</scale>
          <offset>(0,-0.15)</offset>
        </south>
        <east>
          <offset>(-0.45,0.08)</offset>
          <thin><offset>(0.05,0)</offset></thin>
          <hulk><offset>(-0.15,0)</offset></hulk>
          <fat> <offset>(-0.20,0)</offset></fat>
        </east>
        <west>
          <offset>(0.45,-0.08)</offset>
          <thin><offset>(-0.05,0)</offset></thin>
          <hulk><offset>(0.15,0)</offset></hulk>
          <fat> <offset>(0.20,0)</offset></fat>
        </west>
      </wornGraphicData>
    </apparel>
    <tradeTags> 
      <li>ExoticMisc</li>
    </tradeTags>
    <modExtensions>
      <li Class="ApexMechanoids.DefModExtension_MechPack">
        <spawnedKind>APM_Mech_Satellite</spawnedKind>
      </li>
    </modExtensions>
    <verbs> 
        <verbClass>ApexMechanoids.Verb_SpawnMech</verbClass>
        <label>spawn support mech</label>
        <spawnedKind>pawnKindDef</spawnedKind>
        <onlyManualCast>True</onlyManualCast>
        <violent>false</violent>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
    </verbs>
  </ThingDef>
</Defs>